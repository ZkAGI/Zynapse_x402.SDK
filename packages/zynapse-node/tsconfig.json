{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "types": ["node"],
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src"]
  }
  